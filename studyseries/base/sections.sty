\def\tabularxcolumn#1{m{#1}}
\makeatletter
 \DeclareRobustCommand{\stTarget}[1]{\Hy@raisedlink{\hypertarget{#1}{}}}
\makeatother

\newcommand{\stchapter}[2]{%
    \stTarget{#1}\chapter{#2}
    \vspace{0.5cm}
}
\newcommand{\stsection}[4]{%
    \stTarget{#1}\section[#2]{#2}
	\vspace{0.05cm}
}
\newcommand{\stsubsection}[4]{%
    \stTarget{#1}\subsection[#2]{#2}
	\vspace{0.05cm}
}
\newcommand{\stsubsubsection}[4]{%
    \stTarget{#1}
    \begin{tabularx}{\textwidth}{Xr}
        \subsubsection[#2]{\normalsize \textbf{#2}}  & \hyperlink{#3}{\small{Go to Top}} \\
    \end{tabularx}
}
